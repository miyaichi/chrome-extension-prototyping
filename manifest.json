{
  "manifest_version": 3,
  "name": "Chrome Extension Template",
  "version": "1.0",
  "description": "Chrome Extension Template with TypeScript and React",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
